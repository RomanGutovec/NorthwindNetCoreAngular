@model int

@{
    ViewData["Title"] = "CategoryImage";
}

<h1>Category image uploader</h1>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <div>
                    <img src="@Url.Action("GetImage", "Category", new {id = Model})" />
                </div>
            </td>
            <td>
                <form asp-action="Images" asp-route-categoryId="@Model" asp-controller="Category" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <input class="form-control-file" type="file" name="uploadedFile" /><br>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Upload File" />
                    </div>
                </form>
            </td>
        </tr>
    </tbody>
</table>