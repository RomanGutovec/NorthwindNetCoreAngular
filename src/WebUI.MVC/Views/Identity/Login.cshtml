@model WebUI.MVC.Models.Identity.UserLoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input asp-for="ReturnUrl" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
        @await Html.PartialAsync("/Views/Identity/_ExternalAuthentication.cshtml", Model.ReturnUrl)
</div>

<div>
    <a asp-controller="Account" asp-action="ForgotPassword">Forgot password</a>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Home Page</a>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
